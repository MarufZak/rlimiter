{
  "name": "@marufzak/rlimiter",
  "version": "1.0.2",
  "description": "Rate limiter for NodeJS",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rm -rf dist && tsc -p ./tsconfig.json",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "lint:check": "eslint . --ext .ts",
    "lint:write": "eslint . --ext .ts --fix",
    "format:write": "prettier --cache --write \"**/*.{ts,json}\"",
    "format:check": "prettier --cache --check \"**/*.{ts,json}\"",
    "prepublishOnly": "run-s lint:check format:check test build"
  },
  "keywords": [
    "rate-limiter",
    "nodejs"
  ],
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "author": "marufzak",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testcontainers/redis": "^11.11.0",
    "@types/koa": "^3.0.1",
    "@types/node": "^25.2.2",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "koa": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.8.1",
    "redis": "^5.10.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters/koa": {
      "types": "./dist/adapters/koa.d.ts",
      "default": "./dist/adapters/koa.js"
    }
  },
  "packageManager": "pnpm@10.10.0"
}
